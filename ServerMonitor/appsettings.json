{
  "Zidium": {
    "Access": {
      "Url": "",
      "SecretKey": ""
    },
    "DefaultComponent": {
      "Id": ""
    }
  },

  "Server": {
    "ComponentId": ""
  },

  "Tasks": {
    "DiskSpaceTask": {
      "Schedule": "0 * * * * *",
      "Enabled": true,
      "Disks": []
    },
    "MemoryTask": {
      "Schedule": "0 * * * * *",
      "Enabled": true
    },
    "CpuTask": {
      "Schedule": "0 * * * * *",
      "Enabled": true
    },
    "DiskPerformanceTask": {
      "Schedule": "0 * * * * *",
      "Enabled": true,
      "Disks": []
      // Для windows список дисков можно получить в powershell командой Get-WmiObject -Query "select Name from win32_perfformatteddata_perfdisk_physicaldisk"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Information"
      },
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
      }
    },
    "NLog": {
      "LogLevel": {
        "Default": "Debug",
        "Microsoft": "Warning"
      }
    }
  },

  "NLog": {
    "internalLogLevel": "Off",
    "throwExceptions": false,
    "autoReload": true,

    "variables": {
      "appName": "ZidiumServerMonitor",
      "logPath": "${specialfolder:folder=LocalApplicationData}/${appName}"
    },

    "targets": {
      "File": {
        "type": "File",
        "encoding": "utf-8",
        "layout": "${date:format=yyyy-MM-dd HH\\:mm\\:ss} ${logger} ${level::uppercase=true} ${message}",
        "fileName": "${logPath}/${appName}_${date:format=yyyy-MM-dd}.log",
        "archiveFileName": "${logPath}/${appName}_{#}.log",
        "archiveDateFormat": "yyyy-MM-dd",
        "archiveNumbering": "Date",
        "archiveEvery": "Day",
        "maxArchiveFiles": 30
      }
    },

    "rules": [
      {
        "logger": "*",
        "minlevel": "Trace",
        "writeTo": "File"
      }
    ]
  }
}
